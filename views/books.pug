extends layout

block content
    p

    .book-grid
        each book in books
            .book-item
                img(src=book.imageURL, alt=book.title)
                h4
                    a(href=`/books/${book.id}`) #{book.title}
                p= book.author

    a(href='/books/add', class='btn btn-success btn-margin') Add New Book

    script(src='/main.js')
